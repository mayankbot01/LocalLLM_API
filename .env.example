# ============================================================
# .env.example  —  Copy this file to .env and fill in values
# DO NOT commit .env to version control!
# ============================================================

# ---- Server -----------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS: comma-separated list of allowed origins
# Use ["*"] for dev, restrict in production e.g. ["https://mysite.com"]
CORS_ORIGINS=["*"]

# ---- Admin secret (keep this strong and private) ----------
# Used for: POST /admin/api-keys, DELETE /admin/api-keys/{id}
ADMIN_SECRET=change-me-to-something-strong-and-random

# ---- Ollama -----------------------------------------------
# If running Ollama on the same machine, use localhost
OLLAMA_BASE_URL=http://localhost:11434

# Default model if not specified in request
OLLAMA_DEFAULT_MODEL=qwen2.5:7b

# Max seconds to wait for Ollama response
OLLAMA_TIMEOUT=120

# ---- Supabase (Free tier — https://supabase.com) ----------
# Create a project at supabase.com → Settings → API
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# ---- Rate limiting defaults (can be overridden per key) ---
DEFAULT_RATE_LIMIT_PER_MIN=20
DEFAULT_MONTHLY_TOKEN_LIMIT=1000000

# ---- API key prefix ---------------------------------------
API_KEY_PREFIX=llm
